mixin product-preview(item)
  div(class= (item.cl ? item.cl + ' product-preview' : 'product-preview'))
    if item.label
      span.product-preview__label= item.label
    .product-preview__image 
      img(src="images/product-preview/" + item.img.n + ".jpg", srcset="images/product-preview/" + item.img.n + "@2x.jpg 2x", width= item.img.w || '', height= item.img.h || '',  alt= item.title)
    h3.product-preview__title 
      a(href="#")!= item.title
    .product-preview__text!= item.text
    .product-preview__bottom 
      if item.isOrderIt
        +button('Заказать', 'button--order', 'box', '#')
      else
        +button('В корзину', 'button--to-cart', 'cart', '#')
      .product-preview__price
        if item.isOldPrice
          .product-preview__price-old 1200₽
        | 1200₽