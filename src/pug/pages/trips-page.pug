extends ../layouts/default

block vars
  -
    const page = {
      title: 'Клубные поездки'
    };

    const bc = [
      {text: page.title}
    ];

block main
  article.trips-page
    .container
      header.trips-page__header
        +breadcrumbs(bc, 'trips-page__breadcrumbs')
        +title(page.title, 'h1', 'title--medium trips-page__title')
      
      .trips-page__grid.trips-grid
        .trips-grid__item.trip-card
          .trip-card__bg
            img(src="images/homepage/trip/1.jpg", srcset="images/homepage/trip/1@2x.jpg 2x", width="607", height="339", alt="")
          .trip-card__content
            .trip-card__place Египет
            .trip-card__title Дейли-дайвинг на Красном море
            .trip-card__date 02.09.2021 - 11.09.2021
            .trip-card__desc Один из лучших и излюбленных дайверами маршрутов сафари.
            .trip-card__price 97 000₽
            +button('Подробнее', 'button--outline button--icon trip-card__more', 'chevron-right')
        
        
        
        //each item in courses
          +course-preview(item)
        //each item in courses
          +course-preview(item)