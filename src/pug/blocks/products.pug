section.products
	.container
		.products__row
			+title('Товары с клубной символикой', '', 'title--small products__title')
			+button('Все товары', 'button--angle products__more', 'arrow-angle')
		.products__wrapper
			.swiper-container.__js_products-carousel
				.swiper-wrapper
					.products__item.product-preview.swiper-slide
						.product-preview__image
							img(src="images/homepage/products/1.jpg", srcset="images/homepage/products/1@2x.jpg 2x", width="140", height="186", alt="")
						h3.product-preview__title
							a(href="#") SDI OWD
						.product-preview__text Open Water Diver. Учебное пособие по дайвингу
						.product-preview__bottom
							+button('В корзину', 'product-preview__btn', 'cart', '#')
							.product-preview__price 1 200₽
					.products__item.product-preview.swiper-slide
						.product-preview__image
							img(src="images/homepage/products/2.jpg", srcset="images/homepage/products/2@2x.jpg 2x", width="171", height="195", alt="")
						h3.product-preview__title
							a(href="#") SDI ночной дайвинг
						.product-preview__text Ночной дайвинг. Подводная навигация и погружения
						.product-preview__bottom
							+button('В корзину', 'product-preview__btn', 'cart', '#')
							.product-preview__price 1 200₽
					.products__item.product-preview.swiper-slide
						.product-preview__image
							img(src="images/homepage/products/3.jpg", srcset="images/homepage/products/3@2x.jpg 2x", width="106", height="193", alt="")
						h3.product-preview__title
							a(href="#") FRTI пособие
