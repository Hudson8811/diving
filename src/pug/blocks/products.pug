						.product-preview__bottom
							+button('В корзину', 'product-preview__btn', 'cart', '#')
							.product-preview__price 1 200₽
					.products__item.product-preview.swiper-slide
						.product-preview__image
							img(src="images/homepage/products/4.jpg", srcset="images/homepage/products/4@2x.jpg 2x", width="112", height="201", alt="")
						h3.product-preview__title
							a(href="#") Стивен Барски Dry Suit
						.product-preview__text Дайвинг в сухом костюме. История, обзор теории, уход.
						.product-preview__bottom
							+button('В корзину', 'product-preview__btn', 'cart', '#')
							.product-preview__price 1 200₽
			+button('', 'button--outline button--icon slick-prev products__prev', 'chevron-right')
